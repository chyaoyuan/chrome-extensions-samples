{
  "name": "Request Logger By Content",
  "version": "1.0",
  "manifest_version": 3,
  "description": "通过重写XMLHttpRequest的send方法记录请求并重放",
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
